BOT_TOKEN=токен от BotFather

BOT_CONFIG=./bot.yaml

# директория с логами бота/запусков
LOGS_DIR=./logs

# таймаут работы скриптов (сек)
RUN_TIMEOUT=600

# лимит размера отправляемых файлов в МБ
MAX_UPLOAD_MB=45

# кому разрешён доступ; можно пусто = всем
# JSON-массив или CSV. Примеры:
# OWNER_IDS=[11111111,22222222]
# OWNER_IDS=11111111,22222222
OWNER_IDS=

# Избранные кнопки — формат:
#   "preset <script> <preset_name> ..." или "run <script> <args...>"
FAVORITES=["preset ping json"]

# логирование
# INFO / DEBUG / WARNING / ERROR
LOG_LEVEL=INFO
# true = писать и в файл logs/bot.log, false = только stdout (удобно в Docker)
LOG_TO_FILE=true
